    STIG-ID         : WN10-AC-000020 

.TESTED ON
    Date(s) Tested  : 
    Tested By       : 
    Systems Tested  : 
    PowerShell Ver. : 

.USAGE
    Run script in Powershell as administrator
  
#>

# YOUR CODE GOES HERE
# # Define the registry path for password policy
$RegPath = "HKLM:\SYSTEM\CurrentControlSet\Policies\Microsoft\Windows\System"
$RegName = "MaximumPasswordHistory"
$RegValue = 24  # Set to 24 passwords remembered

# Check if the registry key exists, if not, create it
If (!(Test-Path $RegPath)) {
    New-Item -Path $RegPath -Force | Out-Null
}

# Set the password history value
Set-ItemProperty -Path $RegPath -Name $RegName -Value $RegValue -Type DWord

# Output confirmation
Write-Host "Password history policy has been set to 24 remembered passwords."

# Force a Group Policy update to apply changes immediately
gpupdate /force
